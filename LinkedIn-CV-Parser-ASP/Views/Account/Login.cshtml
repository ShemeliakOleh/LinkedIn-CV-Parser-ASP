@model LinkedIn_CV_Parser_ASP.ViewModels.LoginViewModel

<head>
    <link rel="stylesheet" href="~/css/ChngPwdStyles.css">
</head>

<h2>Signing In to site</h2><br /><br />

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" class="main">
    <div>
        <div class="form-group">
            <input type="text" asp-for="Email" placeholder="Enter email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <input asp-for="Password" placeholder="Enter password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Sign In" class="btn btn-outline-dark" id="signin" />
        </div>
        <div class="validation" asp-validation-summary="ModelOnly" style="font-family: 'Calibri'; color: #DC3131; font-weight: bold; font-size:20px; margin-top:20px"></div>
        
    </div>
    <a style="text-align:center; margin-top:20px" asp-action="ForgotPassword" asp-controller="Account">Forgot password?</a>
</form>