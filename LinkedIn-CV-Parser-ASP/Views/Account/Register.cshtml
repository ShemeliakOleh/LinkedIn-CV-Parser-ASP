@model LinkedIn_CV_Parser_ASP.ViewModels.RegisterViewModel

<head>
   <link rel="stylesheet" href="~/css/ChngPwdStyles.css">
</head>

<h2>Sign Up</h2><br /><br />

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" class="main">
    <div class="validation" asp-validation-summary="ModelOnly"  ></div>
    <div>

        <div>
            <input type="text" asp-for="Email" placeholder="Enter email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <input asp-for="Password" placeholder="Enter password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <input asp-for="ConfirmPassword" placeholder="Repeat password" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Sign Up" id="signup"/>
        </div>
        <div style="margin-top:15px">
            <input type="text" asp-for="Key" placeholder="Enter Key" />
            
        </div>
    </div>
</form>